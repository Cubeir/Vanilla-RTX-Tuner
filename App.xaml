<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Vanilla_RTX_Tuner_WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vanilla_RTX_Tuner_WinUI">
    <!-- RequestedTheme="Dark" force dark mode? -->
        <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily"
                        Value="Segoe UI" />
            </Style>
            <Style TargetType="FontIcon">
                <Setter Property="FontFamily"
                        Value="Segoe Fluent Icons" />
            </Style>
            <Style x:Key="TextBlockSegIcons"
                   TargetType="TextBlock">
                <Setter Property="FontFamily"
                        Value="Segoe Fluent Icons" />
            </Style>
            <Style x:Key="ButtonSegIcons"
                   TargetType="Button">
                <Setter Property="FontFamily"
                        Value="Segoe Fluent Icons" />
            </Style>
            <ResourceDictionary.ThemeDictionaries>

                <!-- Light theme -->
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="SplashBackgroundColor">#FFE3E3E3</Color>
                </ResourceDictionary>

                <!-- Dark theme -->
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="SplashBackgroundColor">#FF202020</Color>
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>

        
    </Application.Resources>
</Application>
