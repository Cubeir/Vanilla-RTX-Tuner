<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Vanilla_RTX_Tuner_WinUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Vanilla_RTX_Tuner_WinUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Vanilla RTX Tuner"
        mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid">

        <!-- Static bitmap for titlebar -->
        <Rectangle x:Name="TitleBarBackground"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Height="35"
                   IsHitTestVisible="False"
                   Visibility="Visible"
                   CacheMode="BitmapCache">
            <Rectangle.Fill>
                <ImageBrush x:Name="TitleBarImageBrush"
                            ImageSource="/Assets/titlebar.background.png"
                            Opacity="0.0"
                            Stretch="Fill"
                            AlignmentX="Left"
                            AlignmentY="Top"/>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Static bitmap for white theme -->
        <Rectangle x:Name="LightThemeBackground"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   IsHitTestVisible="False"
                   Visibility="Collapsed"
                   CacheMode="BitmapCache"
                   Canvas.ZIndex="-1">
            <Rectangle.Fill>
                <ImageBrush x:Name="LightThemeImageBrush"
                            ImageSource="/Assets/lighttheme.background.png"
                            Opacity="0.25"
                            Stretch="Fill"
                            AlignmentX="Left"
                            AlignmentY="Top"/>
            </Rectangle.Fill>
        </Rectangle>






        <!-- Titlebar Buttons -->
        <Button x:Name="HelpButton"
                Content="&#xE897;"
                FontFamily="Segoe MDL2 Assets"
                Width="40"
                Height="32"
                CornerRadius="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15, 0, 138, 15"
                FontSize="16"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="HelpButton_Click"
                ToolTipService.ToolTip="Help" />

        <Button x:Name="DonateButton"
                Content="&#xEB51;"
                FontFamily="Segoe MDL2 Assets"
                Width="40"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15, 0, 179, 15"
                CornerRadius="0"
                FontSize="16"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="DonateButton_Click"
                PointerEntered="DonateButton_PointerEntered"
                PointerExited="DonateButton_PointerExited"
                ToolTipService.ToolTip="Support the developer" />

        <Button x:Name="AppUpdaterButton"
                Content="&#xE895;"
                FontFamily="Segoe MDL2 Assets"
                Width="40"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15, 0, 220, 15"
                CornerRadius="0"
                FontSize="16"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="AppUpdaterButton_Click"
                ToolTipService.ToolTip="Check for update" />


        
        
        <!-- Titlebar Logo + Text -->
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="0, 0"
              IsHitTestVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Canvas Grid.Column="0"
                    Height="20"
                    Width="20"
                    VerticalAlignment="Center"
                    Margin="0,0,7,0"
                    CacheMode="BitmapCache"
                    Canvas.ZIndex="1">
                    
                <!-- Halo (Bottom layer) -->
                <Image x:Name="iconHaloImageBox"
                       Source="/Assets/tuner.lamp.halo.png"
                       Height="128"
                       Width="128"
                       Canvas.Left="-54"
                       Canvas.Top="-54"
                       Opacity="0.25"
                       Canvas.ZIndex="2" />

                <!-- Base "On" image (always visible) -->
                <Image x:Name="iconImageBox"
                       Source="/Assets/tuner.lamp.on.small.png"
                       Height="20"
                       Width="20"
                       Opacity="1.0"
                       Canvas.ZIndex="3" />

                <!-- Overlay "Off" image (fades in and out during the animation) -->
                <Image x:Name="iconOverlayImageBox"
                       Source="/Assets/tuner.lamp.off.small.png"
                       Height="20"
                       Width="20"
                       Opacity="0.0"
                       Canvas.ZIndex="4" />
            </Canvas>

            <TextBlock x:Name="TitleBarText"
                       Grid.Column="1"
                       FontFamily="Segoe UI"
                       Text="Vanilla RTX Tuner"
                       Margin="0,6,0,5"
                       VerticalAlignment="Center"
                       Canvas.ZIndex="0" />
        </Grid>

        

        <!-- Output log box -->
        <TextBox x:Name="SidebarLog"
                 Margin="16,100,16,16"
                 Width="350"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Left"
                 TextWrapping="Wrap"
                 IsTabStop="True"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 AllowFocusOnInteraction="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ToolTipService.ToolTip="All relevant logs appear here." />
        
        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar"
                     Width="345"
                     Margin="18.5,100,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     IsIndeterminate="False"
                     ShowPaused="False"
                     ShowError="False"/>
        

        <!-- Locate Pack Button -->
        <Button x:Name="LocatePacksButton"
                Click="LocatePacksButton_Click"
                Width="200"
                Height="40"
                Margin="16,47"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontWeight="SemiBold"
                ToolTipService.ToolTip="Locates all currently-installed Vanilla RTX packages in Minecraft or Minecraft Preview (Optional: Enable Target Preview)">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <FontIcon Glyph="&#xF78B;"
                          FontSize="18"
                          Margin="0,0,8,0"
                          VerticalAlignment="Center" />
                <TextBlock Text="Locate Vanilla RTX"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Button>

        <!-- Target Preview Button -->
        <ToggleButton x:Name="TargetPreviewToggle"
                      Content="Target Preview"
                      Width="140"
                      Height="40"
                      Margin="226,47"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      FontWeight="SemiBold"
                      Checked="TargetPreviewToggle_Checked"
                      Unchecked="TargetPreviewToggle_Unchecked"
                      ToolTipService.ToolTip="If enabled, all of app's functionality targets Minecraft Preview instead of regular Minecraft." />

        <!-- Pack Selection Options -->
        <StackPanel x:Name="PackOptionsPanel"
                    Orientation="Vertical"
                    Margin="410,51,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ToolTipService.ToolTip="From the list of installed packages select which packs to Tune or Export">

            <CheckBox x:Name="OptionsAllCheckBox"
                      Content="Select Packs"
                      IsThreeState="True"
                      IsEnabled="False"
                      IsChecked="False"
                      Checked="SelectAll_Checked"
                      Unchecked="SelectAll_Unchecked"
                      Indeterminate="SelectAll_Indeterminate"
                      FontWeight="SemiBold" />

            <CheckBox x:Name="VanillaRTXCheckBox"
                      Content="Vanilla RTX"
                      Margin="20,0,0,0"
                      IsEnabled="False"
                      Checked="Option_Checked"
                      Unchecked="Option_Unchecked"
                      FontWeight="SemiBold" />

            <CheckBox x:Name="NormalsCheckBox"
                      Content="Vanilla RTX Normals"
                      Margin="20,0,0,0"
                      IsEnabled="False"
                      Checked="Option_Checked"
                      Unchecked="Option_Unchecked"
                      FontWeight="SemiBold" />

            <CheckBox x:Name="OpusCheckBox"
                      Content="Vanilla RTX Opus"
                      Margin="20,0,0,0"
                      IsEnabled="False"
                      Checked="Option_Checked"
                      Unchecked="Option_Unchecked"
                      FontWeight="SemiBold" />
        </StackPanel>

        
        

        <!-- Reset Sliders Button -->
        <Button x:Name="ResetButton"
                Click="ResetButton_Click"
                Width="90"
                Margin="16,160,16,16"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontWeight="SemiBold"
                ToolTipService.ToolTip="Resets sliders back to their original values. (Note: this doesn't reset packs back to their defaults! To do that, reinstall the packs)">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE72C;"
                          FontSize="16"
                          Margin="0,0,8,0"
                          VerticalAlignment="Center" />
                <TextBlock Text="Reset"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Button>




        <!-- Multiplier Sliders -->
        <StackPanel x:Name="SlidersPanel"
                    Orientation="Vertical"
                    Margin="382,202,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Spacing="0">

            <!-- Fog  -->
            <TextBlock Text="Fog Multiplier (0.0-10.0)"
                       FontWeight="Bold"
                       ToolTipService.ToolTip="Scales all fog densities. Recommended ranges: 0.1–0.8 for light fog, 1–3 for thick fog. 0 to disable air fog (Affects: All Packs)" />
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
                <Slider x:Name="FogMultiplierSlider"
                        Width="200"
                        Minimum="0"
                        Maximum="10"
                        StepFrequency="0.001"
                        SmallChange="0.001"
                        Value="1"
                        ValueChanged="FogMultiplierSlider_ValueChanged" />
                <TextBox x:Name="FogMultiplierBox"
                         Width="60"
                         Text="1.0"
                         TextChanged="FogMultiplierBox_TextChanged" />
            </StackPanel>

            <!-- Spacer -->
            <Rectangle Height="12"
                       Fill="Transparent" />

            <!-- Emissivity -->
            <TextBlock Text="Emissivity Multiplier (0.5-10.0)"
                       FontWeight="Bold"
                       ToolTipService.ToolTip="Scales emissivity of all emissive blocks. 1 = default, 0.5 = half brightness, higher values = stronger glow (Affects: All Packs)" />
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
                <Slider x:Name="EmissivityMultiplierSlider"
                        Width="200"
                        Minimum="0.5"
                        Maximum="10"
                        StepFrequency="0.1"
                        SmallChange="0.1"
                        Value="1"
                        ValueChanged="EmissivityMultiplierSlider_ValueChanged" />
                <TextBox x:Name="EmissivityMultiplierBox"
                         Width="60"
                         Text="1.0"
                         TextChanged="EmissivityMultiplierBox_TextChanged" />
            </StackPanel>

            <Rectangle Height="12"
                       Fill="Transparent" />

            <!-- Normalmaps -->
            <TextBlock Text="Normal Intensity (0-600%)"
                       FontWeight="Bold"
                       ToolTipService.ToolTip="Increases Normal Map Intensity. 0% = flatten, 100% = default, higher values = more pronounced depth on blocks (Affects: All Packs)" />
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
                <Slider x:Name="NormalIntensitySlider"
                        Width="200"
                        Minimum="0"
                        Maximum="600"
                        StepFrequency="1"
                        SmallChange="1"
                        Value="100"
                        ValueChanged="NormalIntensity_ValueChanged" />
                <TextBox x:Name="NormalIntensityBox"
                         Width="60"
                         Text="100"
                         TextChanged="NormalIntensity_TextChanged" />
            </StackPanel>
        </StackPanel>


        <!-- Multiplier Sliders, Series 2 -->
        <StackPanel x:Name="SlidersPanel_S2"
                    Orientation="Vertical"
                    Margin="676,202,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Spacing="0">

            <!-- Noisy Materials -->
            <TextBlock Text="Material Grain Offset (0-25)"
                       FontWeight="Bold"
                       ToolTipService.ToolTip="Creates grainy materials by adding a layer of noise in a manner that keeps the pack's intended look intact, your input determines the maximum deviation. (Affects: All Packs)" />
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
                <Slider x:Name="MaterialNoiseSlider"
                        Width="200"
                        Minimum="0"
                        Maximum="25"
                        StepFrequency="1"
                        SmallChange="1"
                        Value="0"
                        ValueChanged="MaterialNoise_ValueChanged" />
                <TextBox x:Name="MaterialNoiseBox"
                         Width="60"
                         Text="0"
                         TextChanged="MaterialNoise_TextChanged" />
            </StackPanel>


            <Rectangle Height="12"
                       Fill="Transparent" />

            <!-- Roughen Up -->
            <TextBlock Text="Roughen Up (0-20)"
                       FontWeight="Bold"
                       ToolTipService.ToolTip="Increases surface roughness on materials to better match Vibrant Visuals' artstyle. Uses an inverse curve function to impact lower values more. (Affects: All Packs)" />
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
                <Slider x:Name="RoughenUpSlider"
                        Width="200"
                        Minimum="0"
                        Maximum="20"
                        StepFrequency="1"
                        SmallChange="1"
                        Value="0"
                        ValueChanged="RoughenUp_ValueChanged" />
                <TextBox x:Name="RoughenUpBox"
                         Width="60"
                         Text="0"
                         TextChanged="RoughenUp_TextChanged" />
            </StackPanel>


            <Rectangle Height="12"
                       Fill="Transparent" />


            <!-- Butcher Heightmaps -->
            <TextBlock Text="Butcher Heightmaps (0-255)"
                       FontWeight="Bold"
                       ToolTipService.ToolTip="Butchers heightmaps and reduces refinedness, 0 = no change, 255 = fully lazy heightmaps (Affects: Vanilla RTX Only)" />
            <StackPanel Orientation="Horizontal"
                        Spacing="12">
                <Slider x:Name="ButcherHeightmapsSlider"
                        Width="200"
                        Minimum="0"
                        Maximum="255"
                        StepFrequency="1"
                        SmallChange="1"
                        Value="0"
                        ValueChanged="ButcherHeightmaps_ValueChanged" />
                <TextBox x:Name="ButcherHeightmapsBox"
                         Width="60"
                         Text="0"
                         TextChanged="ButcherHeightmaps_TextChanged" />
            </StackPanel>
        </StackPanel>


        
        
        
        <!-- Bottom Buttons Grid 2x2 -->
        <Grid Margin="382,16,16,16"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Bottom"
              Height="80">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Tune Button -->
            <Button x:Name="TuneSelectionButton"
                    Click="TuneSelectionButton_Click"
                    Grid.Row="0"
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ToolTipService.ToolTip="Begins the tuning process. Do not tamper with the program while it finishes.">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE9F5;"
                              FontSize="18"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Tune Selection"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Reinstall Button -->
            <Button x:Name="UpdateVanillaRTXButton"
                    Click="UpdateVanillaRTXButton_Click"
                    Grid.Row="0"
                    Grid.Column="2"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ToolTipService.ToolTip="Downloads and caches the latest releases of Vanilla RTX and Vanilla RTX Normals (Opus can only be installed manually) further reinstallations are deployed from cache unless an update is available.">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xEBD3;"
                              FontSize="18"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Reinstall Latest Packs"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Launch Button -->
            <Button x:Name="LaunchButton"
                    Click="LaunchButton_Click"
                    Grid.Row="2"
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ToolTipService.ToolTip="Launches Minecraft or Minecraft Preview with ray tracing pre-enabled to avoid issues. Disables VSync for better performance.">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE78B;"
                              FontSize="18"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Launch Minecraft RTX"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Export Button -->
            <Button x:Name="ExportButton"
                    Click="ExportButton_Click"
                    Grid.Row="2"
                    Grid.Column="2"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ToolTipService.ToolTip="Exports selected packages.">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xEDE2;"
                              FontSize="18"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Export Selection"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>




    </Grid>

</Window>