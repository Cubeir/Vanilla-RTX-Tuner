<Window x:Class="Vanilla_RTX_Tuner_WinUI.PackBrowser.PackBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Vanilla_RTX_Tuner_WinUI.PackBrowser"
        Title="Browse Packs">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid>

        <!-- Loading Screen -->
        <Grid x:Name="LoadingPanel"
              Visibility="Visible"
              Background="Transparent">
            <ProgressRing IsActive="True"
                          Width="60"
                          Height="60" />
        </Grid>

        <!-- Pack Selection UI -->
        <Grid x:Name="PackSelectionPanel"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title Bar Background -->
            <Rectangle x:Name="TitleBarBackground"
                       Grid.Row="0"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       IsHitTestVisible="False"
                       Visibility="Visible"
                       CacheMode="BitmapCache">
                <Rectangle.Fill>
                    <ImageBrush x:Name="TitleBarImageBrush"
                                ImageSource="ms-appx:///Assets/titlebar.background.png"
                                Opacity="0.0"
                                Stretch="Fill"
                                AlignmentX="Left"
                                AlignmentY="Top" />
                </Rectangle.Fill>
            </Rectangle>

            <!-- Title Bar Area -->
            <Grid Grid.Row="0"
                  x:Name="TitleBarArea"
                  Background="Transparent">

                <!-- Centered Title -->
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <TextBlock Text="Select Another Resource Pack"
                               FontFamily="Segoe UI"
                               Margin="0,6,0,5"
                               VerticalAlignment="Center"
                               IsTextScaleFactorEnabled="False"
                               IsHitTestVisible="False" />
                </Grid>
            </Grid>

            <!-- Pack List -->
            <ScrollViewer Grid.Row="1"
                          Padding="20"
                          Margin="0,8,0,0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="PackListContainer"
                            Spacing="8" />
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed"
                        Spacing="12">
                <FontIcon Glyph="&#xE7C3;"
                          FontSize="48"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                <TextBlock x:Name="EmptyStateText"
                           Text="No compatible packs found"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>